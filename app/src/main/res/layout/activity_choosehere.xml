<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lolwallpaper"
    tools:context=".Choosehere">

    <ImageView
        android:id="@+id/chooseMonster"
        android:layout_width="378dp"
        android:layout_height="202dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/choosemonster" />

    <ImageView
        android:id="@+id/chooseHero"
        android:layout_width="378dp"
        android:layout_height="202dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/choosehero" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="261dp"
        android:layout_height="37dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/frizquadrata"
        android:text="Choose Path"
        android:textAlignment="center"
        android:textColor="#e9dda2"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="261dp"
        android:layout_height="37dp"
        android:fontFamily="@font/frizquadrata"
        android:text="Monster"
        android:textAlignment="center"
        android:textColor="#e9dda2"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/chooseMonster"
        app:layout_constraintStart_toStartOf="@+id/chooseMonster"
        app:layout_constraintTop_toBottomOf="@+id/chooseMonster" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="261dp"
        android:layout_height="37dp"
        android:fontFamily="@font/frizquadrata"
        android:text="Hero"
        android:textAlignment="center"
        android:textColor="#e9dda2"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/chooseHero"
        app:layout_constraintStart_toStartOf="@+id/chooseHero"
        app:layout_constraintTop_toBottomOf="@+id/chooseHero" />

</androidx.constraintlayout.widget.ConstraintLayout>